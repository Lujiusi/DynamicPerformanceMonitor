{
  "ruleId": "1000",
  "aggregatorFun": [
    {
      "aggregatorFunctionType": "max",
      "aliasName": "load.1min.max",
      "datasource": "system.load.*",
      "window": 1,
      "computeColumn": "full_gc.sum",
      "filters": [
        {
          "key": "host",
          "value": [
            "192.168.1.1",
            "192.168.1.2"
          ]
        }
      ],
      "groupingKeyNames": []
    },
    {
      "aggregatorFunctionType": "sum",
      "aliasName": "cpu.idle.value",
      "datasource": "system.cpu.*",
      "computeColumn": "idle",
      "window": 2
    }
  ],
  "filters": {
    "": ""
  },
  "alarmRule": {
    "type": "and",
    "fields": [
      {
        "type": "selector",
        "alarmColumn": "load.1min.max",
        "compareOperator": ">",
        "target": 5
      },
      {
        "type": "selector",
        "alarmColumn": "load.1min.max.total",
        "compareOperator": ">",
        "target": 10
      }
    ]
  },
  "postAggregatorFun": [
    {
      "aliasName": "load.1min.max.total",
      "fields": [
        {
          "fieldName": "cpu.system.value,cpu.system.value",
          "postAgg": "sum"
        },
        {
          "fieldName": "cpu.idle.value",
          "postAgg": "sum"
        }
      ],
      "operator": "+"
    }
  ],
  "ruleState": "start"
}